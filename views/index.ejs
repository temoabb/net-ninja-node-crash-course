<!DOCTYPE html>
<html lang="en">

<!-- head  -->
<%- include('./partials/head.ejs') %>

  <body>
    <%- include('./partials/nav.ejs') %>
      <!-- nav -->
      <div class="blogs content">
        <h2>All Blogs</h2>
        <% if (blogs.length> 0) { %>
          <% blogs.forEach(blog=> { %>
            <h3 class="title">
              <%= blog.title %>
            </h3>
            <p class="snippet">
              <%= blog.snippet %>
            </p>
            <% }) %>
              <% } else { %>
                <h3>Unfortunatelly there are no blogs!</h3>
                <% } %>
      </div>

      <%- include('./partials/footer.ejs') %>
        <!-- footer-->

  </body>

</html>